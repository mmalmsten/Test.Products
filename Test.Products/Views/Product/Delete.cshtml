@model Test.Products.Database.Models.Product
@{
    ViewBag.Title = "Delete";
}

<h2>Do you really want to delete this product?</h2>
@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <span>@ViewBag.Message</span>
}

@if (HttpContext.Current.Request.HttpMethod != "POST")
{
    <div class="col-sm-8 col-sm-offset-2 row deletebuttons">
        @using (Html.BeginForm("Delete", "Product", FormMethod.Post))
        {
            @Html.HiddenFor(x => x.ID);
            <button type="submit" class="btn btn-lg btn-danger col-xs-12 col-sm-5">Yes, delete product</button>
        }
        <a href="javascript: history.go(-1)" class="btn btn-lg btn-default col-xs-12 col-sm-5 col-sm-offset-2">Cancel</a>
</div>
}